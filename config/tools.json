{
  "tools": {
    "desktopCommander": {
      "command": "{npxPath}",
      "args": [
        "@wonderwhy-er/desktop-commander"
      ]
    },
    "git-mcp": {
      "command": "{uvxPath}",
      "args": [
        "mcp-server-git",
        "--repository",
        "{repoPath}"
      ],
      "windowsFallback": {
        "command": "python",
        "args": [
          "-m",
          "mcp_server_git",
          "--repository",
          "{repoPath}"
        ]
      }
    }
  }
}